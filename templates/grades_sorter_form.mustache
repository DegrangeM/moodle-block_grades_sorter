{{!
    @template block_grades_sorter/grades_sorter_form

    This template renders the grades sorter form.

    Example context (json):
    {
        "sesskey": "XXXXX"
    }
}}
<div class="grade_sorterform">
    <form class="form-inline" method="POST">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        <input type="hidden" name="sortgrade" value="1">
        <button class="btn btn-secondary" type="submit">{{#str}}sortgrades, block_grades_sorter{{/str}}</button>
    </form>
</div>
